<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<fx:root type="VBox" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
   <HBox alignment="TOP_CENTER">
      <Button fx:id="btnCopy" mnemonicParsing="false" text="Copy to clipboard">
         <HBox.margin>
            <Insets right="30.0" bottom="10.0"/>
         </HBox.margin>
      </Button>
      <Button fx:id="btnRender" mnemonicParsing="false" text="Render">
         <HBox.margin>
            <Insets right="10.0"/>
         </HBox.margin>
      </Button>
      <Button fx:id="btnSave" mnemonicParsing="false" text="Save image">
      </Button>
   </HBox>
   <HBox alignment="CENTER_LEFT">
      <HBox alignment="CENTER_LEFT">
         <TextArea fx:id="textArea">
            <HBox.margin>
               <Insets right="10.0" left="10.0"/>
            </HBox.margin>
         </TextArea>
         <ImageView fx:id="imageView" visible="false">
            <HBox.margin>
               <Insets right="10.0" left="10.0"/>
            </HBox.margin>
         </ImageView>
      </HBox>
   </HBox>
</fx:root>
